<div class="row">
  <div class="col-md-10">
    <div class="contact-form bg-dark">
      <h1 class="text-white add-letter-space mb-5">Register Here!</h1>
      <form method="POST" class="needs-validation" action="/register">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group mb-5">
              <label for="Name" class="text-black-300">Name</label>
              <input
                type="text"
                id="rname"
                name="rname"
                class="form-control bg-transparent rounded-0 border-bottom shadow-none pb-15 px-0"
                placeholder="Fuad Grimaldi"
                required
              />
              <p class="invalid-feedback">Your name is required!</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group mb-5">
              <label for="Username" class="text-black-300">Username</label>
              <input
                type="text"
                name="rusername"
                id="rusername"
                class="form-control bg-transparent rounded-0 border-bottom shadow-none pb-15 px-0"
                placeholder="baba"
                required
              />
              <p class="invalid-feedback">Your username is required!</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group mb-5">
              <label for="Password" class="text-black-300">Password</label>
              <input
                type="password"
                name="rpassword"
                id="password"
                class="form-control bg-transparent rounded-0 border-bottom shadow-none pb-15 px-0"
                placeholder="12312@1dsd"
                required
              />
              <p class="invalid-feedback">Your password is required!</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group mb-5">
              <label class="text-black-300">Gender</label>
              <select class="d-block w-100" name="gender" required>
                <option value="Pria">Pria</option>
                <option value="Wanita">Wanita</option>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="col-md-12">
              <button type="submit" class="btn btn-sm btn-primary me-n2">
                Register<img src="images/arrow-right.png" alt="" />
              </button>
            </div>
            <div class="form-group mb-5"></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

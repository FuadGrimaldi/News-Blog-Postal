<%-include('../popups/warning.ejs') %> <%-include('../popups/success.ejs') %>
<h2 class="mb-3">My Post</h2>
<div class="row justify-content-between">
  <div class="col-lg-7">
    <% dataPost.forEach(post => { %> <% if(post.userId == sessionUserId) { %>
    <div class="card post-item bg-transparent border-0 mb-5">
      <a href="/user-post/<%= post._id %>">
        <img
          class="card-img-top rounded-0"
          src="images/post/post-lg/01.png"
          alt=""
        />
      </a>
      <div class="card-body px-0">
        <h2 class="card-title">
          <a
            class="text-white opacity-75-onHover"
            href="/user-post/<%= post._id %>"
            ><%= post.title %></a
          >
        </h2>
        <ul class="post-meta mt-3">
          <li class="d-inline-block mr-3">
            <span class="fas fa-clock text-primary"></span>
            <a class="ml-1" href="#"><%= post.formattedDate %></a>
          </li>
          <li class="d-inline-block">
            <span class="fas fa-list-alt text-primary"></span>
            <a class="ml-1" href="#"><%= post.category %></a>
          </li>
        </ul>
        <p class="card-text my-4"><%= post.truncatStr %></p>
        <div class="d-flex align-items-center">
          <a href="/user-post/<%= post._id %>" class="btn btn-primary mr-3">
            Read More <img src="images/arrow-right.png" alt="" />
          </a>
          <a href="/edit-post/<%= post._id %>" class="btn btn-primary mr-3">
            Edit Post <i class="fas fa-edit"></i>
          </a>
          <form
            action="/delete-post/<%= post._id %>?_method=DELETE"
            method="post"
          >
            <button type="submit" class="btn btn-primary">
              Delete Post <i class="fas fa-trash"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } %> <%}); %>
    <!-- end of post-item -->
  </div>
